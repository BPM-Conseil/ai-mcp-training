{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Remote Attach Backend",
            "type": "python",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/backend",
                    "remoteRoot": "/app"
                }
            ],
            "justMyCode": false
        },
        {
            "name": "Python: Remote Attach MCP Server",
            "type": "python",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5679
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/mcp_server",
                    "remoteRoot": "/app"
                }
            ],
            "justMyCode": false
        }
    ]
}
